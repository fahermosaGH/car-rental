{# templates/security/login.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login - Car Rental Admin</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-dark text-light">
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card bg-secondary text-light" style="min-width: 350px;">
        <div class="card-body">
            <h1 class="h4 mb-3 text-center">Login Admin</h1>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="text" name="_username" id="inputEmail"
                           class="form-control"
                           value="{{ last_username }}" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Contrase√±a</label>
                    <input type="password" name="_password" id="inputPassword"
                           class="form-control" required>
                </div>

                <button class="btn btn-primary w-100" type="submit">
                    Ingresar
                </button>
            </form>
        </div>
    </div>
</div>
</body>
</html>
